<?oxygen SCHSchema="test-contrib-group-presence-2.sch"?>
<!--Context: article[@article-type='research-article']/front/article-meta
Test: assert    contrib-group[@content-type='peer-review']
Message: contrib-group[@content-type='peer-review'] must be present (as a child of article-meta) for research articles (this is the contrib-group which contains reviewers and editors). -->
<root xmlns:ali="http://www.niso.org/schemas/ali/1.0" xmlns:mml="http://www.w3.org/1998/Math/MathML" xmlns:xlink="http://www.w3.org/1999/xlink">
  <article article-type="research-article">
    <front>
      <article-meta>
        <contrib-group content-type="peer-review"/>
      </article-meta>
    </front>
  </article>
</root>